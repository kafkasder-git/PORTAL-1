# ==========================================
# Appwrite Configuration
# ==========================================

# Appwrite Cloud or Self-Hosted Endpoint
# Cloud: https://cloud.appwrite.io/v1
# Local: http://localhost:8000/v1
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite Project ID (from Appwrite Console)
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your-project-id

# Your Appwrite API Key (from Appwrite Console > Settings > API Keys)
# This is for server-side operations ONLY - never expose to client
APPWRITE_API_KEY=your-api-key

# Appwrite Database ID
NEXT_PUBLIC_DATABASE_ID=dernek_db


# ==========================================
# Storage Bucket IDs
# ==========================================

NEXT_PUBLIC_STORAGE_DOCUMENTS=documents
NEXT_PUBLIC_STORAGE_RECEIPTS=receipts
NEXT_PUBLIC_STORAGE_PHOTOS=photos
NEXT_PUBLIC_STORAGE_REPORTS=reports


# ==========================================
# Application Settings
# ==========================================

# Application Name
NEXT_PUBLIC_APP_NAME=Dernek YÃ¶netim Sistemi

# Application Version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Enable Real-time Features
NEXT_PUBLIC_ENABLE_REALTIME=true

# Enable Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false


# ==========================================
# Security & Authentication
# ==========================================

# CSRF Protection Secret (generate with: openssl rand -base64 32)
CSRF_SECRET=your-32-character-csrf-secret-here-minimum-32-characters

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-32-character-session-secret-here-minimum-32-characters


# ==========================================
# Optional: Email Configuration (SMTP)
# ==========================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com


# ==========================================
# Optional: SMS Configuration (Twilio)
# ==========================================

# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890


# ==========================================
# Rate Limiting
# ==========================================

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Window size in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000


# ==========================================
# File Upload Limits
# ==========================================

# Max file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Max files per upload
MAX_FILES_PER_UPLOAD=5


# ==========================================
# Sentry Error Tracking (Optional)
# ==========================================

# SENTRY_DSN=your-sentry-dsn
# SENTRY_ORG=your-org
# SENTRY_PROJECT=your-project


# ==========================================
# Environment
# ==========================================

# Development, production, or test
NODE_ENV=development


# ==========================================
# Notes
# ==========================================

# 1. Copy this file to .env.local and fill in your actual values
# 2. NEVER commit .env.local to git (it's in .gitignore)
# 3. For CSRF_SECRET and SESSION_SECRET, generate secure random strings:
#    openssl rand -base64 32
# 4. Get your Appwrite credentials from: https://cloud.appwrite.io/console
# 5. Storage buckets will be created automatically during first setup
